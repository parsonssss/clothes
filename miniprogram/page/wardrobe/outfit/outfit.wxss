/* page/wardrobe/outfit/outfit.wxss */

/* Color variables based on autumn palette */
page {
  --cowhide-cocoa: #442D1C;
  --spiced-wine: #74301C;
  --toasted-caramel: #84592B;
  --olive-harvest: #9D9167;
  --golden-batter: #E8D1A7;
}

/* 全局容器 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
  padding: 32rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 5rpx solid;
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  letter-spacing: 1rpx;
}

/* 主要内容区域 */
.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
  padding-bottom: 40rpx;
}

/* 顶部区域 */
.top-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 0 20rpx;
}

/* 创建搭配按钮 */
.create-outfit-button {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.15);
  transition: transform 0.2s ease, opacity 0.2s ease;
}

.create-outfit-button:active {
  transform: scale(0.96);
  opacity: 0.9;
}

.plus-icon {
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 8rpx;
}

/* 段落标题 */
.section-title {
  font-size: 36rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}

/* 搭配类别滚动区域 */
.outfit-categories-scroll {
  flex: 1;
  overflow-y: auto;
  padding: 0 10rpx;
}

/* 搭配类别卡片 */
.outfit-category-card {
  width: 100%;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-between;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.outfit-category-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 类别信息区域 */
.category-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-right: 20rpx;
}

.category-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.category-description {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 16rpx;
}

.category-count {
  font-size: 22rpx;
  opacity: 0.8;
  margin-bottom: 20rpx;
}

/* 搭配预览区域 */
.outfit-preview-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 140rpx;
}

/* 衣物预览滚动区域 */
.outfit-items-preview {
  white-space: nowrap;
  margin-bottom: 20rpx;
  height: 120rpx;
}

.preview-item {
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  margin-right: 15rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.preview-item-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
  background-color: rgba(255, 255, 255, 0.2);
}

/* 空搭配提示 */
.empty-outfit-area {
  height: 120rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  opacity: 0.8;
  margin-bottom: 20rpx;
}

/* 查看更多按钮 */
.view-more {
  font-size: 24rpx;
  display: flex;
  align-items: center;
  margin-top: auto;
}

.arrow {
  margin-left: 8rpx;
  font-weight: bold;
  transition: transform 0.2s ease;
}

.outfit-category-card:active .arrow {
  transform: translateX(5rpx);
}

/* 类别预览图容器 */
.category-preview-container {
  width: 200rpx;
  height: 260rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 类别预览图区域 */
.category-preview {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.15);
}

.category-preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.empty-preview {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 16rpx;
}