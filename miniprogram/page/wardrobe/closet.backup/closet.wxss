/* page/wardrobe/closet/closet.wxss */

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  padding: 20rpx 20rpx 0;
  box-sizing: border-box;
  position: relative;
}

/* 分类横向滚动 */
.categories {
  display: flex;
  white-space: nowrap;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  flex-shrink: 0;
  height: auto;
  max-height: 80rpx;
  overflow-x: auto;
  overflow-y: hidden;
}

.category {
  display: inline-block;
  padding: 12rpx 24rpx;
  background-color: #efebe9;
  border-radius: 8rpx;
  margin-right: 16rpx;
  font-size: 26rpx;
  white-space: nowrap;
  color: #8d6e63;
  transition: all 0.3s ease;
  line-height: 1.2;
  box-sizing: border-box;
}

.category.active {
  background-color: #d7ccc8;
  color: #5d4037;
  font-weight: 500;
}

/* 衣物容器 */
.clothes-container {
  flex: 1;
  width: 100%;
  overflow-y: auto;
  box-sizing: border-box;
  padding-right: 10rpx;
  padding-left: 10rpx;
  margin-top: 0;
  -webkit-overflow-scrolling: touch; /* 添加iOS流畅滚动 */
  flex-grow: 1;
}

/* 衣物网格 */
.clothes-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(160rpx, 1fr));
  gap: 16rpx;
  width: 100%;
  padding-bottom: 150rpx; /* 增加底部空间，确保内容不被添加按钮遮挡 */
  box-sizing: border-box;
}

.clothes-item {
  position: relative;
  background-color: #efebe9;
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #a1887f;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(105, 87, 76, 0.1);
  transition: all 0.3s ease;
  width: 100%;
  height: 0;
  padding-bottom: 100%; /* 使用padding-bottom来强制维持正方形比例 */
}

.clothes-item:active {
  transform: scale(0.97);
  box-shadow: 0 1rpx 3rpx rgba(105, 87, 76, 0.1);
}

.clothes-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
}

.clothes-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 12rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.1));
  color: white;
  min-height: 60rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  z-index: 2;
}

.clothes-name {
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 4rpx;
}

.clothes-category {
  font-size: 20rpx;
  opacity: 0.8;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

