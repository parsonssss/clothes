  text-align: center;
  padding: 24rpx 0;
  font-size: 30rpx;
  color: #8d6e63;
  border-radius: 8rpx;
  background-color: #efebe9;
}

/* 上传中状态 */
.upload-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 200;
  display: flex;
  justify-content: center;
  align-items: center;
}

.upload-content {
  background-color: #f8f5f2;
  border-radius: 16rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.upload-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #efebe9;
  border-top: 6rpx solid #8d6e63;
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

.upload-text {
  font-size: 30rpx;
  color: #5d4037;
}
