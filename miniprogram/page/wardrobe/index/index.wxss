/**page/wardrobe/index/index.wxss**/
.container {
  padding: 20rpx;
  background-color: #f8f5f2;
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* Weather Widget */
.weather-widget {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.weather-info {
  flex: 1;
}

.weather-location {
  font-size: 26rpx;
  color: #5d4037;
  margin-bottom: 4rpx;
}

.weather-temp {
  font-size: 40rpx;
  font-weight: bold;
  color: #5d4037;
  margin-bottom: 4rpx;
}

.weather-condition {
  font-size: 24rpx;
  color: #8d6e63;
}

.weather-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.weather-icon-img {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.weather-icon-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

/* Weather Icon Styles */
.icon-sun, .icon-cloud, .icon-rain {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.icon-sun {
  background-color: #ffb300;
  box-shadow: 0 0 20rpx rgba(255, 179, 0, 0.5);
}

.icon-cloud {
  background-color: #b0bec5;
  box-shadow: 0 0 20rpx rgba(176, 190, 197, 0.5);
}

.icon-rain {
  background-color: #64b5f6;
  box-shadow: 0 0 20rpx rgba(100, 181, 246, 0.5);
}

/* OOTD and Outfit Area */
.ootd-container {
  display: flex;
  flex-direction: row;
  gap: 20rpx;
  height: calc(100vh - 200rpx); /* Subtract header height + padding */
}

/* Model Display Area */
.model-section {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.model-container {
  position: relative;
  width: 100%;
  flex: 1;
  border-radius: 20rpx;
  overflow: hidden;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: center;
  align-items: center;
}

.model-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.model-upload-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.model-upload-text {
  color: #fff;
  font-size: 22rpx;
}

/* Recommended Outfit Area */
.outfit-section {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.outfit-cards {
  flex: 1;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow-y: auto;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.outfit-card {
  display: flex;
  gap: 16rpx;
  align-items: center;
  padding: 16rpx;
  border-radius: 16rpx;
  background-color: #efebe9;
}

.outfit-card-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  object-fit: cover;
}

.outfit-card-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  background-color: #d7ccc8;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* Clothing type icons */
.outfit-card-icon.tops:after {
  content: "";
  width: 60%;
  height: 60%;
  background-color: #8d6e63;
  clip-path: polygon(25% 0%, 75% 0%, 100% 30%, 100% 100%, 0% 100%, 0% 30%);
}

.outfit-card-icon.pants:after {
  content: "";
  width: 60%;
  height: 60%;
  background-color: #8d6e63;
  clip-path: polygon(30% 0%, 70% 0%, 100% 20%, 100% 100%, 70% 100%, 70% 30%, 30% 30%, 30% 100%, 0% 100%, 0% 20%);
}

.outfit-card-icon.coat:after,
.outfit-card-icon.jacket:after {
  content: "";
  width: 60%;
  height: 60%;
  background-color: #8d6e63;
  clip-path: polygon(40% 0%, 60% 0%, 80% 20%, 100% 0%, 100% 100%, 0% 100%, 0% 0%, 20% 20%);
}

.outfit-card-icon.skirt:after {
  content: "";
  width: 60%;
  height: 60%;
  background-color: #8d6e63;
  clip-path: polygon(30% 0%, 70% 0%, 100% 20%, 90% 100%, 10% 100%, 0% 20%);
}

.outfit-card-info {
  flex: 1;
}

.outfit-card-name {
  font-size: 26rpx;
  color: #5d4037;
  font-weight: bold;
  margin-bottom: 4rpx;
}

.outfit-card-type {
  font-size: 22rpx;
  color: #8d6e63;
}

.empty-outfit {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.empty-outfit-text {
  font-size: 26rpx;
  color: #8d6e63;
  text-align: center;
  padding: 0 30rpx;
}

/* Thinking animation */
.thinking-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0 30rpx;
}

.thinking-animation {
  display: flex;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.thinking-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #8d6e63;
  animation: thinking 1.4s infinite ease-in-out;
}

.thinking-dot:nth-child(1) {
  animation-delay: 0s;
}

.thinking-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.thinking-dot:nth-child(3) {
  animation-delay: 0.4s;
}

.thinking-text {
  font-size: 26rpx;
  color: #8d6e63;
  text-align: center;
}

@keyframes thinking {
  0%, 80%, 100% {
    transform: scale(0.6);
    opacity: 0.4;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

/* Section Headers */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #5d4037;
}

/* Recommend Button */
.recommend-button {
  padding: 8rpx 16rpx;
  background-color: #8d6e63;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.recommend-button-text {
  font-size: 22rpx;
  color: #fff;
}

/* Generation Status */
.generating-status {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  padding: 16rpx 30rpx;
  background-color: rgba(93, 64, 55, 0.8);
  border-radius: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 16rpx;
}

.generating-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  border-top-color: transparent;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.generating-text {
  font-size: 24rpx;
  color: #fff;
}

/* Loading State */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid #8d6e63;
  border-top-color: transparent;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 30rpx;
  color: #8d6e63;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
