/* 天气组件 */
.weather-widget {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #efebe9;
  color: #5d4037;
  border-radius: 16rpx;
  margin-bottom: 40rpx;
}

.weather-location {
  font-size: 24rpx;
  margin-bottom: 10rpx;
  color: #8d6e63;
}

.weather-temp {
  font-size: 44rpx;
  font-weight: 400;
  color: #5d4037;
}

.weather-condition {
  font-size: 24rpx;
  color: #8d6e63;
  margin-top: 10rpx;
}

.weather-icon {
  font-size: 72rpx;
  color: #8d6e63;
}

