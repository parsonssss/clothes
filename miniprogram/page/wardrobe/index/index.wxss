/* page/wardrobe/index/index.wxss */

/* 全局容器 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 32rpx;
  box-sizing: border-box;
  padding-top: 5vh; /* 顶部预留20%空间 */
}

/* 加载中遮罩 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 5rpx solid;
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
}

/* 天气小组件 */
.weather-widget {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
}

.weather-info {
  display: flex;
  flex-direction: column;
}

.weather-location {
  font-size: 30rpx;
  margin-bottom: 10rpx;
}

.weather-temp {
  font-size: 44rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.weather-condition {
  font-size: 26rpx;
}

.weather-icon {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.weather-icon-img {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.weather-icon-image {
  width: 100%;
  height: 100%;
}

/* 天气图标 */
.icon-sun, .icon-cloud, .icon-rain {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

/* OOTD容器 */
.ootd-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
  height: 80vh; /* 占据剩余的80%视窗高度 */
}

/* 段落标题 */
.section {
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  letter-spacing: 2rpx;
}

/* 模特展示区域 */
.model-container {
  position: relative;
  width: 70%; /* 今日搭配占屏幕长度70% */
  height: 45vh; /* 大约占整体高度的60% */
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 40rpx;
  margin: 0 auto; /* 居中显示 */
}

.model-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.model-upload-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  text-align: center;
}

.model-upload-text {
  font-size: 26rpx;
}

/* 推荐按钮 */
.recommend-button {
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
}

.recommend-button-text {
  font-size: 26rpx;
}

/* 衣物卡片区域 */
.outfit-cards {
  display: flex;
  flex-wrap: wrap; /* 改为水平排列并自动换行 */
  justify-content: space-between;
  margin-top: 20rpx;
  height: auto; /* 自适应高度 */
  min-height: 20vh; /* 最小高度 */
  overflow-y: auto; /* 允许垂直滚动 */
}

.outfit-card {
  position: relative;
  width: 46%; /* 卡片宽度调整为略小于半宽，每行显示两张 */
  height: 240rpx; /* 增加高度 */
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1); /* 添加阴影效果 */
  transition: transform 0.3s ease; /* 添加过渡效果 */
}

/* 悬停效果 */
.outfit-card:hover {
  transform: translateY(-5rpx);
}

.outfit-card-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.outfit-card-icon {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
}

.outfit-card-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 15rpx;
}

.outfit-card-name {
  font-size: 26rpx;
  font-weight: 500;
  margin-bottom: 6rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.outfit-card-type {
  font-size: 22rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 图标样式 */
.tops:after { content: "上"; }
.pants:after { content: "裤"; }
.coat:after { content: "外"; }
.skirt:after { content: "裙"; }
.jacket:after { content: "夹"; }
.shoes:after { content: "鞋"; }
.accessories:after { content: "饰"; }

/* 思考中状态 */
.thinking-container {
  width: 100%;
  padding: 40rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.thinking-animation {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.thinking-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin: 0 8rpx;
  animation: bounce 1.4s infinite ease-in-out both;
}

.thinking-dot:nth-child(1) {
  animation-delay: -0.32s;
}

.thinking-dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes bounce {
  0%, 80%, 100% { 
    transform: scale(0);
  } 
  40% { 
    transform: scale(1.0);
  }
}

.thinking-text {
  font-size: 28rpx;
  text-align: center;
}

/* 空状态 */
.empty-outfit {
  width: 100%;
  padding: 40rpx;
  border-radius: 16rpx;
  text-align: center;
}

.empty-outfit-text {
  font-size: 28rpx;
  line-height: 1.5;
}

/* 生成状态指示器 */
.generating-status {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.generating-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid;
  border-radius: 50%;
  margin-bottom: 30rpx;
  animation: spin 1s linear infinite;
}

.generating-text {
  font-size: 30rpx;
}
