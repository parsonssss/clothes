/* page/wardrobe/index/index.wxss */

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(248, 245, 242, 0.9);
  z-index: 100;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 5rpx solid #efebe9;
  border-top: 5rpx solid #8d6e63;
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #8d6e63;
}

/* 天气组件 */
.weather-widget {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #efebe9;
  color: #5d4037;
  border-radius: 16rpx;
  margin-bottom: 40rpx;
}

.weather-location {
  font-size: 24rpx;
  margin-bottom: 10rpx;
  color: #8d6e63;
}

.weather-temp {
  font-size: 44rpx;
  font-weight: 400;
  color: #5d4037;
}

.weather-condition {
  font-size: 24rpx;
  color: #8d6e63;
  margin-top: 10rpx;
}

.weather-icon {
  font-size: 72rpx;
  color: #8d6e63;
}

