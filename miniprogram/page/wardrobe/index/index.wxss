/* 穿搭推荐 */
.outfit-suggestion {
  display: flex;
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(105, 87, 76, 0.05);
}

.outfit-img {
  width: 160rpx;
  height: 200rpx;
  background-color: #efebe9;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #a1887f;
}

.outfit-body {
  padding: 30rpx;
  flex: 1;
}

.tag-container {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

/* 衣柜状态卡片 */
.closet-stat-item {
  padding: 16rpx 0;
  border-bottom: 1px solid #efebe9;
}

.closet-stat-item:last-child {
  border-bottom: none;
}

.closet-stat-label {
  color: #8d6e63;
  font-size: 28rpx;
}

.closet-stat-value {
  color: #5d4037;
  font-size: 28rpx;
  font-weight: 400;
}

/* 衣物项目 */
.clothes-item {
  aspect-ratio: 1;
  background-color: #efebe9;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  color: #a1887f;
}
