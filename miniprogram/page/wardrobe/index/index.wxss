/* page/wardrobe/index/index.wxss */

/* Color variables based on autumn palette */
page {
  /* 秋季色谱 */
  --cowhide-cocoa: #442D1C;
  --spiced-wine: #74301C;
  --toasted-caramel: #84592B;
  --olive-harvest: #9D9167;
  --golden-batter: #E8D1A7;
  
  /* 粉蓝色谱 */
  --pink-dark: #D47C99;
  --pink-medium: #EEA0B2;
  --pink-light: #F9C9D6;
  --blue-light: #CBE0F9;
  --blue-medium: #97C8E5;
  --blue-dark: #5EA0D0;
}

/* 全局容器 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 32rpx;
  box-sizing: border-box;
  padding-top: 5vh; /* 顶部预留5%空间 */
}

/* 加载中遮罩 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 5rpx solid;
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  letter-spacing: 1rpx;
}

/* 天气小组件 */
.weather-widget {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-radius: 24rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease;
}

.weather-widget:active {
  transform: scale(0.98);
}

.weather-info {
  display: flex;
  flex-direction: column;
}

.weather-location {
  font-size: 30rpx;
  margin-bottom: 10rpx;
  letter-spacing: 1rpx;
}

.weather-temp {
  font-size: 44rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
  letter-spacing: 1rpx;
}

.weather-condition {
  font-size: 26rpx;
  letter-spacing: 1rpx;
}

.weather-icon {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.weather-icon-img {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.weather-icon-image {
  width: 100%;
  height: 100%;
}

/* 天气图标 */
.icon-sun, .icon-cloud, .icon-rain {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

/* OOTD容器 */
.ootd-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
  height: 80vh; /* 占据剩余的80%视窗高度 */
}

/* 段落标题 */
.section {
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  letter-spacing: 2rpx;
  position: relative;
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 0;
  width: 40rpx;
  height: 3rpx;
  background-color: var(--cowhide-cocoa);
}

/* 模特展示区域 */
.model-container {
  position: relative;
  width: 75%; /* 今日搭配占屏幕长度75% */
  height: 50vh; /* 大约占整体高度的50% */
  border-radius: 24rpx;
  overflow: hidden;
  margin: 0 auto 40rpx; /* 居中显示 */
  box-shadow: 0 12rpx 24rpx rgba(0, 0, 0, 0.15);
}

.model-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.model-upload-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx;
  text-align: center;
}

.model-upload-text {
  font-size: 26rpx;
  letter-spacing: 1rpx;
}

/* 推荐按钮 */
.recommend-button {
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  transition: transform 0.2s ease, opacity 0.2s ease;
}

.recommend-button:active {
  transform: scale(0.97);
  opacity: 0.9;
}

.recommend-button-text {
  font-size: 26rpx;
  letter-spacing: 1rpx;
}

/* 衣物卡片区域 */
.outfit-cards {
  display: flex;
  flex-wrap: wrap; /* 水平排列并自动换行 */
  justify-content: space-between;
  margin-top: 24rpx;
  height: auto; /* 自适应高度 */
  min-height: 20vh; /* 最小高度 */
  overflow-y: auto; /* 允许垂直滚动 */
}

.outfit-card {
  position: relative;
  width: 48%; /* 卡片宽度调整为略小于半宽，每行显示两张 */
  height: 240rpx; /* 固定高度 */
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.outfit-card:active {
  transform: translateY(-5rpx) scale(0.98);
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.08);
}

.outfit-card-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.outfit-card-icon {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
}

.outfit-card-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx;
  backdrop-filter: blur(5px);
}

.outfit-card-name {
  font-size: 26rpx;
  font-weight: 500;
  margin-bottom: 6rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  letter-spacing: 1rpx;
}

.outfit-card-type {
  font-size: 22rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  letter-spacing: 1rpx;
}

/* 图标样式 */
.tops:after { content: "上"; }
.pants:after { content: "裤"; }
.coat:after { content: "外"; }
.skirt:after { content: "裙"; }
.jacket:after { content: "夹"; }
.shoes:after { content: "鞋"; }
.accessories:after { content: "饰"; }

/* 思考中状态 */
.thinking-container {
  width: 100%;
  padding: 40rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.08);
}

.thinking-animation {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.thinking-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin: 0 8rpx;
  animation: bounce 1.4s infinite ease-in-out both;
}

.thinking-dot:nth-child(1) {
  animation-delay: -0.32s;
}

.thinking-dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes bounce {
  0%, 80%, 100% { 
    transform: scale(0);
  } 
  40% { 
    transform: scale(1.0);
  }
}

.thinking-text {
  font-size: 28rpx;
  text-align: center;
  letter-spacing: 1rpx;
}

/* 空状态 */
.empty-outfit {
  width: 100%;
  padding: 40rpx;
  border-radius: 20rpx;
  text-align: center;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.08);
}

.empty-outfit-text {
  font-size: 28rpx;
  line-height: 1.6;
  letter-spacing: 1rpx;
}

/* 生成状态指示器 */
.generating-status {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 999;
  backdrop-filter: blur(3px);
}

.generating-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid;
  border-radius: 50%;
  margin-bottom: 30rpx;
  animation: spin 1s linear infinite;
}

.generating-text {
  font-size: 30rpx;
  letter-spacing: 2rpx;
}

/* 删除设置按钮样式 */

/* 粉蓝风格顶部渐变 */
.top-gradient {
  height: 160rpx;
  background: linear-gradient(to right, var(--pink-medium), var(--blue-medium));
  position: relative;
  padding: 20rpx;
  border-radius: 0 0 30rpx 30rpx;
}

/* 删除页面标题样式 */

/* 粉蓝风格天气卡片 */
.weather-card {
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 40rpx;
  padding: 30rpx;
  margin: 20rpx 40rpx 40rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 10;
  position: relative;
}

/* 粉蓝风格底部渐变 */
.bottom-gradient {
  height: 160rpx;
  background: linear-gradient(to right, var(--blue-medium), var(--pink-medium));
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  border-radius: 0 0 30rpx 30rpx;
  z-index: -1;
}