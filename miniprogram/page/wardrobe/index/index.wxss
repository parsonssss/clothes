/* 标题样式 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  color: #5d4037;
  font-size: 32rpx;
  font-weight: 400;
  letter-spacing: 2rpx;
  position: relative;
  display: inline-block;
}

.section-title:after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 0;
  width: 40rpx;
  height: 2rpx;
  background-color: #8d6e63;
}

.section-action {
  font-size: 24rpx;
  color: #8d6e63;
}

/* 穿搭推荐 */
.outfit-suggestion {
  display: flex;
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(105, 87, 76, 0.05);
}

.outfit-img {
  width: 160rpx;
  height: 200rpx;
  background-color: #efebe9;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #a1887f;
  position: relative;
}

.outfit-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.outfit-body {
  padding: 30rpx;
  flex: 1;
}

.tag-container {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  background-color: #efebe9;
  border-radius: 8rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  color: #8d6e63;
}

/* 最近添加的衣物 */
.grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.clothes-item {
  position: relative;
  aspect-ratio: 1;
  background-color: #efebe9;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(105, 87, 76, 0.1);
}

.clothes-thumbnail {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.clothes-name-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
  color: white;
  font-size: 24rpx;
  padding: 20rpx 10rpx 10rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 空状态 */
.empty-state {
  padding: 40rpx 0;
  text-align: center;
  margin-bottom: 40rpx;
}

.empty-text {
  color: #a1887f;
  font-size: 28rpx;
}

/* 衣柜状态卡片 */
.closet-stat-item {
  padding: 16rpx 0;
  border-bottom: 1px solid #efebe9;
}

.closet-stat-item:last-child {
  border-bottom: none;
}

.closet-stat-label {
  color: #8d6e63;
  font-size: 28rpx;
}

.closet-stat-value {
  color: #5d4037;
  font-size: 28rpx;
  font-weight: 400;
}
