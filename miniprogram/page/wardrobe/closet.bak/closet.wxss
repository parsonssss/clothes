/* 全局容器 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100%;
}

/* 顶部导航栏 */
.header {
  height: 128rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 36rpx;
  font-weight: 500;
}

/* 主要内容区域 */
.main-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 叠层卡片区域 */
.card-stack {
  width: 50%;
  height: 480rpx;
  position: relative;
}

.category-card {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.category-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-bottom: 32rpx;
}

.category-name {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.category-en-name {
  font-size: 24rpx;
}

/* 导航按钮 */
.nav-button {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  height: 80rpx;
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.nav-button.left {
  left: -100rpx;
}

.nav-button.right {
  right: -100rpx;
}

/* 底部导航栏 */
.footer {
  height: 128rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.nav-item {
  font-size: 28rpx;
}

/* 详情大卡片 */
.detail-card-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
  padding: 32rpx;
}

.detail-card {
  width: 90%;
  height: 85%;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: column;
}

.detail-header {
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.detail-title {
  font-size: 36rpx;
  font-weight: 500;
}

.close-button {
  font-size: 40rpx;
  padding: 10rpx;
}

.clothes-grid {
  flex: 1;
  padding: 0 32rpx;
}

.grid-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 32rpx;
  padding-bottom: 32rpx;
}

.clothes-item {
  border-radius: 16rpx;
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.clothes-image {
  width: 100%;
  height: 300rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.clothes-name {
  font-size: 28rpx;
}

.add-button-container {
  padding: 32rpx;
  display: flex;
  justify-content: center;
}

.add-button {
  width: 88rpx;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}
