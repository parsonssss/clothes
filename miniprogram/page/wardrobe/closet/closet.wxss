/* page/wardrobe/closet/closet.wxss */

/* 全局容器 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100%;
  overflow: hidden;
  padding: 32rpx 0;
  box-sizing: border-box;
}

/* 主要内容区域 */
.main-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

/* 卡片容器 */
.card-container {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  padding: 0 60rpx;
}

/* 卡片包装器 */
.card-wrapper {
  width: 50%;
  height: 400rpx;
  position: relative;
}

/* 类别卡片 */
.category-card {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.category-card.active {
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.2);
  transform: scale(1.02);
}

.category-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-bottom: 32rpx;
}

.category-name {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.category-en-name {
  font-size: 24rpx;
  margin-bottom: 16rpx;
}

.category-count {
  font-size: 22rpx;
  opacity: 0.8;
}

/* 导航按钮 */
.nav-button {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  z-index: 20;
}

.nav-button.prev {
  margin-right: 20rpx;
}

.nav-button.next {
  margin-left: 20rpx;
}

/* 详情大卡片 */
.detail-card-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
  padding: 32rpx;
}

.detail-card {
  width: 90%;
  height: 85%;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: column;
}

.detail-header {
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid rgba(0,0,0,0.1);
}

.detail-title {
  font-size: 36rpx;
  font-weight: 500;
}

.close-button {
  font-size: 40rpx;
  padding: 10rpx;
}

.clothes-grid {
  flex: 1;
  padding: 16rpx;
}

.grid-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-gap: 32rpx;
  padding: 16rpx;
}

/* 分页控制 */
.pagination {
  margin-top: 30rpx;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.pagination-info {
  font-size: 24rpx;
  margin-bottom: 16rpx;
}

.pagination-controls {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: center;
}

.pagination-button {
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  border-radius: 6rpx;
  margin: 0 10rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.pagination-button.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.pagination-page {
  font-size: 26rpx;
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  margin: 0 8rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.pagination-ellipsis {
  font-size: 26rpx;
  margin: 0 8rpx;
}

.clothes-item {
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
  aspect-ratio: 3/4;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.clothes-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.clothes-icon {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
}

.clothes-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.5), transparent);
}

.clothes-name {
  font-size: 26rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.clothes-category {
  font-size: 22rpx;
  opacity: 0.8;
}

/* 图标样式 */
.tops:after { content: "上"; }
.pants:after { content: "裤"; }
.coat:after { content: "外"; }
.skirt:after { content: "裙"; }
.accessories:after { content: "饰"; }

/* 加载中状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 100%;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 5rpx solid;
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  font-size: 80rpx;
}

.empty-icon:after {
  content: "衣";
}

.empty-text {
  font-size: 28rpx;
  text-align: center;
}

/* 添加按钮 */
.add-btn {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
  transition: all 0.3s ease;
}

.add-btn:active {
  transform: scale(0.95);
}

.add-icon {
  width: 40rpx;
  height: 40rpx;
  position: relative;
}

.add-icon:before, .add-icon:after {
  content: '';
  position: absolute;
  background-color: white;
}

.add-icon:before {
  top: 0;
  left: 45%;
  width: 10%;
  height: 100%;
}

.add-icon:after {
  top: 45%;
  left: 0;
  width: 100%;
  height: 10%;
}

/* 添加按钮（在详情卡片内） */
.add-button-container {
  padding: 32rpx;
  display: flex;
  justify-content: center;
}

.add-button {
  width: 88rpx;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

/* 添加选项弹窗 */
.add-options-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
}

.add-options-overlay.show {
  visibility: visible;
  opacity: 1;
}

.add-options-container {
  width: 100%;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  padding: 40rpx 30rpx;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.add-options-overlay.show .add-options-container {
  transform: translateY(0);
}

.add-option-title {
  text-align: center;
  font-size: 32rpx;
  margin-bottom: 40rpx;
  font-weight: 400;
  letter-spacing: 2rpx;
}

.add-option {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  margin-bottom: 16rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.add-option-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

.camera-icon:after { content: "📷"; }
.album-icon:after { content: "🖼️"; }
.url-icon:after { content: "📝"; }

.add-option-text {
  font-size: 30rpx;
}

.cancel-btn {
  margin-top: 40rpx;
  text-align: center;
  padding: 24rpx 0;
  font-size: 30rpx;
  border-radius: 8rpx;
}

/* 上传中状态 */
.upload-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 200;
  display: flex;
  justify-content: center;
  align-items: center;
}

.upload-content {
  border-radius: 16rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.upload-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid;
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

.upload-text {
  font-size: 30rpx;
}
