/* page/wardrobe/closet/closet.wxss */

/* 分类横向滚动 */
.categories {
  display: flex;
  white-space: nowrap;
  margin-bottom: 30rpx;
  padding-bottom: 16rpx;
}

.category {
  display: inline-block;
  padding: 16rpx 30rpx;
  background-color: #efebe9;
  border-radius: 8rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  white-space: nowrap;
  color: #8d6e63;
  transition: all 0.3s ease;
}

.category.active {
  background-color: #d7ccc8;
  color: #5d4037;
  font-weight: 500;
}

/* 衣物网格 */
.clothes-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  width: 100%;
}

.clothes-item {
  aspect-ratio: 1;
  background-color: #efebe9;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #a1887f;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(105, 87, 76, 0.1);
  transition: all 0.3s ease;
}

.clothes-item:active {
  transform: scale(0.97);
  box-shadow: 0 1rpx 3rpx rgba(105, 87, 76, 0.1);
}

