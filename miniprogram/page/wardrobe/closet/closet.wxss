/* page/wardrobe/closet/closet.wxss */

/* 全局容器 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100%;
  overflow: hidden;
  padding: 20rpx 0;
  box-sizing: border-box;
}

/* 主要内容区域 */
.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 10rpx 0 40rpx 0;
}

/* 衣柜标题 */
.wardrobe-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-top: 10vh;
  margin-bottom: 30rpx;
  color: #4A4A4A;
  text-align: center;
  position: relative;
}

.wardrobe-title::after {
  content: '';
  position: absolute;
  bottom: -12rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #A78A7F;
  border-radius: 3rpx;
}

/* 卡片容器 */
.card-container {
  width: 100%;
  height: 60vh;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  padding: 0 60rpx;
  margin-top: 20rpx;
}

/* 卡片包装器 */
.card-wrapper {
  display: flex;
  width: 80%;
  height: 100%;
  position: relative;
  overflow: visible;
  justify-content: center;
  align-items: center;
  touch-action: pan-x;
  -webkit-user-select: none;
  user-select: none;
  pointer-events: auto;
}

/* 类别卡片 */
.category-card {
  position: absolute;
  width: 85%;
  height: 85%;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  padding: 30rpx;
  box-sizing: border-box;
  will-change: transform, opacity;
  transition: all 0.3s ease-out;
  transform-origin: center center;
  -webkit-tap-highlight-color: transparent;  /* 禁用默认的点击高亮 */
  pointer-events: auto;
}

/* 禁用点击样式和触发 */
.category-card.no-tap {
  pointer-events: none !important;
  -webkit-tap-highlight-color: transparent !important;
  transition: transform 0.3s ease-out, opacity 0.3s ease-out !important;
  cursor: default !important;
  touch-action: none !important;
}

.category-card.active {
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.15);
  transform-origin: center center;
}

.category-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-bottom: 32rpx;
}

.category-name {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.category-en-name {
  font-size: 24rpx;
  margin-bottom: 16rpx;
}

.category-count {
  font-size: 22rpx;
  opacity: 0.8;
}

/* 导航按钮 */
.nav-button {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  z-index: 20;
}

.nav-button.prev {
  margin-right: 20rpx;
}

.nav-button.next {
  margin-left: 20rpx;
}

/* 详情大卡片 */
.detail-card-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000; /* 提高z-index确保在最顶层 */
  padding: 32rpx;
}

.detail-card {
  animation: slideUp 0.3s ease-out;
  width: 90%;
  height: 85%;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: column;
}

.detail-header {
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid rgba(0,0,0,0.1);
}

.detail-title {
  font-size: 36rpx;
  font-weight: 500;
}

.close-button {
  font-size: 40rpx;
  padding: 10rpx;
}

/* 衣物网格样式 */
.clothes-grid {
  height: calc(100vh - 300rpx); /* 根据实际布局调整高度 */
  width: 100%;
  overflow-y: auto;
}

.grid-container {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
  box-sizing: border-box;
  min-height: 60vh; /* 确保网格容器有最小高度，避免空状态时布局错位 */
}

.clothes-item {
  width: calc(50% - 20rpx); /* 确保每行两个项目 */
  height: 340rpx; /* 增加高度以显示更多信息 */
  margin: 10rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
  box-sizing: border-box;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  display: flex;
  flex-direction: column;
}

.clothes-item:active {
  transform: scale(0.97);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

.clothes-image-container {
  width: 100%;
  height: 240rpx; /* 增加图片区域高度 */
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  background-color: rgba(255, 255, 255, 0.5);
}

.clothes-image {
  width: 100%;
  height: 100%;
  object-fit: contain; /* 改为contain，避免裁剪，确保整件衣服完整显示 */
}

.clothes-info {
  padding: 12rpx;
  min-height: 100rpx; /* 设置最小高度，确保有足够空间显示信息 */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1; /* 让信息区域填充剩余空间 */
  box-sizing: border-box;
}

.clothes-name {
  font-size: 24rpx;
  line-height: 1.3;
  margin-bottom: 6rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2; /* 最多显示两行 */
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all; /* 允许在任意字符间断行 */
}

.clothes-category {
  font-size: 20rpx;
  line-height: 1.2;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: auto; /* 推到底部 */
}

.clothes-icon {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 80rpx;
}

/* 类别图标样式 */
.clothes-icon.tops:after {
  content: "";
  width: 60%;
  height: 60%;
  background-color: currentColor;
  clip-path: polygon(25% 0%, 75% 0%, 100% 30%, 100% 100%, 0% 100%, 0% 30%);
}

.clothes-icon.pants:after {
  content: "";
  width: 60%;
  height: 60%;
  background-color: currentColor;
  clip-path: polygon(30% 0%, 70% 0%, 100% 20%, 100% 100%, 70% 100%, 70% 30%, 30% 30%, 30% 100%, 0% 100%, 0% 20%);
}

.clothes-icon.coat:after,
.clothes-icon.jacket:after {
  content: "";
  width: 60%;
  height: 60%;
  background-color: currentColor;
  clip-path: polygon(40% 0%, 60% 0%, 80% 20%, 100% 0%, 100% 100%, 0% 100%, 0% 0%, 20% 20%);
}

.clothes-icon.skirt:after {
  content: "";
  width: 60%;
  height: 60%;
  background-color: currentColor;
  clip-path: polygon(30% 0%, 70% 0%, 100% 20%, 90% 100%, 10% 100%, 0% 20%);
}

/* 分页控制 */
.pagination {
  margin-top: 30rpx;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.pagination-info {
  font-size: 24rpx;
  margin-bottom: 16rpx;
}

.pagination-controls {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: center;
}

.pagination-button {
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  border-radius: 6rpx;
  margin: 0 10rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.pagination-button.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.pagination-page {
  font-size: 26rpx;
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  margin: 0 8rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.pagination-ellipsis {
  font-size: 26rpx;
  margin: 0 8rpx;
}

/* 加载中状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 100%;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 5rpx solid;
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  width: 100%;
  height: 60vh; /* 确保足够高度 */
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 120rpx;
}

.empty-text {
  font-size: 28rpx;
  text-align: center;
  max-width: 80%;
  line-height: 1.4;
}

/* 添加按钮 */
.add-btn {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
  transition: all 0.3s ease;
}

.add-btn:active {
  transform: scale(0.95);
}

.add-icon {
  width: 40rpx;
  height: 40rpx;
  position: relative;
}

.add-icon:before, .add-icon:after {
  content: '';
  position: absolute;
  background-color: white;
}

.add-icon:before {
  top: 0;
  left: 45%;
  width: 10%;
  height: 100%;
}

.add-icon:after {
  top: 45%;
  left: 0;
  width: 100%;
  height: 10%;
}

/* 添加按钮（在详情卡片内） */
.add-button-container {
  padding: 32rpx;
  display: flex;
  justify-content: center;
}

.add-button {
  width: 88rpx;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

/* 添加选项弹窗 */
.add-options-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
}

.add-options-overlay.show {
  visibility: visible;
  opacity: 1;
}

.add-options-container {
  width: 100%;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  padding: 40rpx 30rpx;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.add-options-overlay.show .add-options-container {
  transform: translateY(0);
}

.add-option-title {
  text-align: center;
  font-size: 32rpx;
  margin-bottom: 40rpx;
  font-weight: 400;
  letter-spacing: 2rpx;
}

.add-option {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  margin-bottom: 16rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.add-option-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

.camera-icon:after { content: "📷"; }
.album-icon:after { content: "🖼️"; }
.url-icon:after { content: "📝"; }

.add-option-text {
  font-size: 30rpx;
}

.cancel-btn {
  margin-top: 40rpx;
  text-align: center;
  padding: 24rpx 0;
  font-size: 30rpx;
  border-radius: 8rpx;
}

/* 上传中状态 */
.upload-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 200;
  display: flex;
  justify-content: center;
  align-items: center;
}

.upload-content {
  border-radius: 16rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.upload-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid;
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

.upload-text {
  font-size: 30rpx;
}

/* 点击反馈 */
.category-card:active {
  transform: scale(0.98);
  transition: transform 0.1s ease;
}

/* 添加详情卡片打开动画 */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from { transform: translateY(50rpx); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}

.detail-card-container {
  animation: fadeIn 0.3s ease-out;
}

.detail-card {
  animation: slideUp 0.3s ease-out;
  width: 90%;
  height: 85%;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: column;
}

/* 衣物项目的点击反馈 */
.clothes-item {
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.clothes-item:active {
  transform: scale(0.97);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 卡片点击状态 */
.card-hover {
  opacity: 0.8 !important;
  transform: scale(0.98) !important;
  transition: all 0.1s ease-out !important;
}

/* 卡片点击冷却状态 - 防止触发点击反馈 */
.card-cooling {
  pointer-events: none !important;
  -webkit-tap-highlight-color: transparent !important;
  touch-action: none !important;
}
