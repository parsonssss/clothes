<!--page/wardrobe/login/login.wxml-->
<view class="container">
  <view class="login-logo">
    <view class="logo-img">
      <view class="logo-icon"></view>
    </view>
  </view>
  
  <view class="app-title">衣柜橱窗</view>
  
  <view class="login-form">
    <view class="form-group">
      <input class="form-input" type="text" placeholder="用户名/手机号" bindinput="usernameInput" />
    </view>
    <view class="form-group">
      <input class="form-input" type="password" placeholder="密码" bindinput="passwordInput" />
    </view>
    <view class="form-group">
      <button class="btn login-btn" bindtap="login">登录</button>
    </view>
    
    <view class="third-party-title">其他登录方式</view>
    
    <view class="third-party-container">
      <view class="third-party-item" bindtap="thirdPartyLogin" data-type="微信">
        <view class="third-party-icon wechat-icon"></view>
      </view>
      <view class="third-party-item" bindtap="thirdPartyLogin" data-type="QQ">
        <view class="third-party-icon qq-icon"></view>
      </view>
      <view class="third-party-item" bindtap="thirdPartyLogin" data-type="微博">
        <view class="third-party-icon weibo-icon"></view>
      </view>
    </view>
    
    <view class="register-link" bindtap="register">
      还没有账号？<text class="register-text">立即注册</text>
    </view>
  </view>
</view>
